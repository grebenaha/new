extends layout

block content

    h1= title
    //p
    //    a(href='/smsAdmin/daily_messages/add') Add to Daily

    if daily_list && daily_list.length >= 1
        each sms in daily_list
            div.container
                div.row
                    div.col-lg-10
                        a.list-group-item.list-group-item-action.list-group-item-primary
                            b.margin_right Recipient:
                            span.margin_right #{sms.recipient}
                    div.col-sm
                        a(href=sms.url) Edit

    else
        li There are no daily messages.

    include _paginate